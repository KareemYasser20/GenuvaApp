<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#213749"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/Party_team_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            />
            <TextView
                android:id="@+id/team_name"
                app:layout_constraintStart_toEndOf="@+id/Party_team_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masar Ejbari"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
        <TextView
            android:id="@+id/party_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/team_name"
            app:layout_constraintStart_toEndOf="@+id/Party_team_image"
            android:text="7 PM , 25 April"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            />
        <Button
            android:id="@+id/book_party"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/party_date"
            app:layout_constraintRight_toRightOf="parent"
            android:text="BOOk Now"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:background="#C41735BE"
            android:textSize="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>