<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookandSeats"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/slectseats_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your seats Please"
        android:textColor="#006DF0"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        />

    <GridView
        android:id="@+id/gridview_select_seats"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:numColumns="5"
        />


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="345dp"
        android:layout_height="45dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"

        >
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_seat_green"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available "
            android:textColor="#006DF0"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_seat_red"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
           />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserved "
            android:textColor="#006DF0"
            android:textSize="17dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chair"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected "
                android:textColor="#006DF0"
                android:textSize="17dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>